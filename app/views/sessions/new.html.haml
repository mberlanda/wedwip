-  provide(:title, "Log In")

.jumbotron.col-md-6.col-md-offset-3
  .page-header.clearfix
    .pull-left
      %h2 Log In
    .pull-right
      .btn-group
        = link_to 'Back', "#", class: "btn btn-primary disabled"
        = link_to 'Show', "#", class: "btn btn-primary success"
  %hr

  = simple_form_for :session, url: login_path,  html: { class: 'form-horizontal' }, wrapper: :horizontal_input_group, wrapper_mappings: { check_boxes: :horizontal_radio_and_checkboxes, radio_buttons: :horizontal_radio_and_checkboxes, file: :horizontal_file_input, boolean: :horizontal_boolean } do |f|

    = f.error_notification
    .form-inputs
      = f.input :email, label: "Email", class: "form-control"
      = f.input :password, label: "Password", class: "form-control"
      %hr
    .form-actions
      = f.button :submit, class: "btn btn-primary"