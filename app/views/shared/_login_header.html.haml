%header{ style: "background-image: url(#{asset_path('img/valdemossa.jpg')})" }
  %aside.header-quote
    .container.wow.fadeIn
      .row
        .col-md-10.col-md-offset-1
          / %span.quote= t('header.date')
          %span.quote
            %span.text-primary= t('header.text-primary')
          %hr.colored
          %span.quote= t('header.quote')
          %br
          .col-md-12
            .col-md-6
              %br/
              %a.btn.btn-outline-light.page-scroll{ href: "#login" }= t('header.buttons.login')
            .col-md-6
              %br/
              %a.btn.btn-outline-light.page-scroll{ href: "#register" }= t('header.buttons.signup')


  .scroll-down
    %a.btn.page-scroll{ href: "#login" }
      %i.fa.fa-angle-down.fa-fw