- model_class = User
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @user.name
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @user.email
%p
  %strong= model_class.human_attribute_name(:phone_number) + ':'
  %br
  = @user.phone_number
%p
  %strong= model_class.human_attribute_name(:country) + ':'
  %br
  = @user.country
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @user.city
%p
  %strong= model_class.human_attribute_name(:has_car) + ':'
  %br
  = @user.has_car
%p
  %strong= model_class.human_attribute_name(:family_unit) + ':'
  %br
  = @user.family_unit
%p
  %strong= model_class.human_attribute_name(:arrival_date) + ':'
  %br
  = @user.arrival_date
%p
  %strong= model_class.human_attribute_name(:departure_date) + ':'
  %br
  = @user.departure_date


= link_to t('.back', :default => t("helpers.links.back")), users_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(@user), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(@user), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
