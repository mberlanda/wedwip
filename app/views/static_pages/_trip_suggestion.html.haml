.row.content-row
  .col-lg-8.col-lg-offset-2
    %form#tripForm{:name => "tripForm", :novalidate => ""}
      .row.control-group
        .form-group.col-xs-12.floating-label-form-group.controls
          %label Nome
          %input#suggestion_name.form-control{:placeholder => "Nome", :type => "text"}/
          %p.help-block.text-danger
      .row.control-group
        .form-group.col-xs-12.floating-label-form-group.controls
          %label Titolo
          %input#suggestion_title.form-control{:placeholder => "Titolo", :type => "text"}/
          %p.help-block.text-danger      
      .row.control-group
        .form-group.col-xs-12.floating-label-form-group.controls
          %label Messagio
          %textarea#suggestion_message.form-control{:placeholder => "Message", :rows => "5"}
          %p.help-block.text-danger
    .form-action
      .row
        %br
        = button_tag("Suggerisci", id: "add-suggestion", class: 'btn default')
