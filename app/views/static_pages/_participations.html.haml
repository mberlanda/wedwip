%section#work.bg-gray
  .container.text-center.wow.fadeIn
    %h2 Our Work
    %hr.colored/
    %p Examples of our work which represent our design and marketing capabilities.
%section.portfolio-carousel.wow.fadeIn
  .item{:style => "background-image: url('assets/img/portfolio/bg-1.jpg')"}
    .container-fluid
      .row
        .col-md-4.col-md-push-8
          .project-details
            %img.img-responsive.client-logo{:alt => "", :src => "assets/img/client-logos/logo-1.png"}/
            %span.project-name Project Name
            %span.project-description Branding, Website Design
            %hr.colored/
            %a.btn.btn-outline-light{"data-toggle" => "modal", :href => "#portfolioModal1"}
              View Details
              %i.fa.fa-long-arrow-right.fa-fw
        .col-md-8.col-md-pull-4.hidden-xs
          %img.img-responsive.portfolio-image{:alt => "", :src => "assets/img/portfolio/mobile-screens.png"}/
