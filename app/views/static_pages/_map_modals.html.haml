/ CSS for responsive embed-container
:css
  .embed-container { position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; max-width: 100%; } .embed-container iframe, .embed-container object, .embed-container embed { position: absolute; top: 0; left: 0; width: 100%; height: 100%; }

/ Church Modal
#churchMap.portfolio-modal.modal.fade{"aria-hidden" => "true", :role => "dialog", :tabindex => "-1"}
  .modal-content
    .close-modal{"data-dismiss" => "modal"}
      .lr
        .rl
    .modal-body
      .container
        .row
          .col-lg-8.col-lg-offset-2
            %img.img-responsive.img-centeredv
              = render partial: 'static_pages/maps/church'

        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"}
          %i.fa.fa-times
          Close
