%section#message.bg-gray
  .container.wow.fadeIn
    .row
      .col-lg-12.text-center
        %h2= t('contact.header.title')
        %hr.colored/
        %p= t('contact.header.description')
      .col-lg-8.col-lg-offset-2.text-center
        %h4 Mauro
        %h4 +39 320 08 68 008
        %h4 Beatrice
        %h4 +39 331 19 73 800
        %hr.colored/
    .row.content-row
      .col-lg-8.col-lg-offset-2
        %form#contactForm{:name => "contactForm", :novalidate => ""}
          .row.control-group
            .form-group.col-xs-12.floating-label-form-group.controls
              %label= t('contact.form.message.label')
              %textarea#contact-msg.form-control{"aria-invalid" => "false", :placeholder => "#{t('contact.form.message.placeholder')}", :required => "", :rows => "5"}
              %p.help-block.text-danger
          .row.control-group
            .form-group.col-xs-12.floating-label-form-group.controls
              %label= t('contact.form.phone_number.label')
              %input#contact-phone_number.form-control{:placeholder => "#{t('contact.form.phone_number.placeholder')}", :type => "text"}/
              %p.help-block.text-danger
                .form-action
        .row
          %br
          .text-center
            = button_tag("#{t('contact.form.send')}", id: "contact-button", class: 'btn default')

