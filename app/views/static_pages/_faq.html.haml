// parcheggio, carsharing, dormire
%section#faq.bg-gray
  .container-fluid
    .row.text-center
      .col-lg-12.wow.fadeIn
        %h1= t('faq.header.title')
        %hr.colored
        %p= t('faq.header.description')
    .row.text-center
      .col-md-3.col-sm-3#parking
        .about-content.wow.fadeIn{ "data-wow-delay" => ".2s" }
          %i.fa.fa-car.fa-4x
          %h3= t('faq.parking.title')
          %p= t('faq.parking.description')
      .col-md-3.col-sm-3#carsharing
        .about-content.wow.fadeIn{ "data-wow-delay" => ".4s" }
          %i.fa.fa-taxi.fa-4x
          %h3= t('faq.carsharing.title')
          %p= t('faq.carsharing.description')
      .col-md-3.col-sm-3#hospitality
        .about-content.wow.fadeIn{ "data-wow-delay" => ".6s" }
          %i.fa.fa-bed.fa-4x
          %h3= t('faq.hospitality.title')
          %p= t('faq.hospitality.description')
      .col-md-3.col-sm-3#cutlery
        .about-content.wow.fadeIn{ "data-wow-delay" => ".8s" }
          %i.fa.fa-cutlery.fa-4x
          %h3= t('faq.cutlery.title')
          %p= t('faq.cutlery.description')
